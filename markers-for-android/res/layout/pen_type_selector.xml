<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <view
        android:id="@+id/fountainpen_marker1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        class="com.google.android.apps.markers.ToolButton$PenTypeButton"
        android:padding="2dp"
        android:tag="type_fountain"
        app:penType="fountainpen" />

    <view
        android:id="@+id/fountainpen_marker2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        class="com.google.android.apps.markers.ToolButton$PenTypeButton"
        android:padding="2dp"
        android:tag="type_fountain"
        app:penType="fountainpen" />

    <view
        android:id="@+id/fountainpen_marker3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        class="com.google.android.apps.markers.ToolButton$PenTypeButton"
        android:padding="2dp"
        android:tag="type_fountain"
        app:penType="fountainpen" />

</LinearLayout>
